<br><br><br>
<div class="posi">
<h2><%= @title.start_date.strftime("%d日")%></h2>
<% @event.each do |event|%>
  <% @user.each do |user|%>
    <% if event.user_id == user.id then %>
      <b>イベント:</b> <%= event.event%><br>
      <b>日付　　:</b> <%= event.start_date.strftime("%Y年%m月%d日")%><br>
      <b>時間　　:</b> <% if event.time %>
                      <%= event.time.strftime("%H:%M")%>
                      <% else %>
                        設定されていません。
                      <% end %><br><br>
      <b>詳細</b><br>
      <%= event.description%><br><br><br>

      <% if event.join == nil then %>
        <%= link_to("編集", "/event/#{event.id}/edit")%>　
        <%= link_to("削除", "/event/#{event.id}/destroy", {method:"post"})%><br><br>
      <% else %>
        <%= link_to("イベントから抜ける", "/event/#{event.id}/destroy", {method:"post"})%><br><br>
      <% end %>
      ---------------------------------------<br><br>
    <% end %>
  <% end%>
<% end %>
<%= link_to("戻る", "/home/top")%>　
</div>